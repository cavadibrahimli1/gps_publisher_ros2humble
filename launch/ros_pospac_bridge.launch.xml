<launch>
    <!-- Define an argument for the parameter file -->
    <arg name="param_file" default="$(find-pkg-share gps_publisher)/config/config.yaml"/>

    <!-- Node definition using the parameter file -->
    <node
        name="gps_publisher"
        pkg="gps_publisher"
        exec="gps_publisher"
        output="screen">
        <param from="$(var param_file)"/>
    </node>
</launch>
